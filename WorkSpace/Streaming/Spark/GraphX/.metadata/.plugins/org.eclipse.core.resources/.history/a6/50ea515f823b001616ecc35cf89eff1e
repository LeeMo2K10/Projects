package com.spark.graphx;

import java.io.Serializable;
import java.util.Arrays;

import scala.Option;
import scala.runtime.AbstractFunction0;
import scala.runtime.AbstractFunction3;

public class VertexFunction extends AbstractFunction3<Object, Object, Option<Object>, Object> implements Serializable {

	
	private static final long serialVersionUID = 1L;

	@Override
	public Object apply(Object id, Object old, Option<Object> extra) {
		System.out.println(Arrays.asList(old));

		return old + extra.getOrElse(new F0());
	}

	class F0 extends AbstractFunction0<Double> {

		@Override
		public Object apply() {
			return (Object)100.0;
		}

	}

}
