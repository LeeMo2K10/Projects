package com.graphx.vertexrdd;

import com.graphx.withDoubles.VertexFunction.F0;

import scala.Option;
import scala.runtime.AbstractFunction0;
import scala.runtime.AbstractFunction3;

public class JoinFunction extends AbstractFunction3<Object, Integer, Option<Integer>, Integer> {

	@Override
	public Integer apply(Object id, Integer old, Option<Integer> extra) {

		return old + extra.getOrElse(new F0());

	}

	class F0 extends AbstractFunction0<Double> {

		@Override
		public Double apply() {
			return 100.0;
		}

	}
}
