package com.akka;

import akka.actor.ActorSelection;
import akka.actor.Props;
import akka.actor.UntypedActor;
import akka.event.Logging;
import akka.event.LoggingAdapter;

public class Actor1 extends UntypedActor {
	LoggingAdapter log = Logging.getLogger(getContext().system(), this);

	@Override
	public void onReceive(Object msg) throws Exception {

		if (msg instanceof String) {

			log.info("Recieved Message From Main Is : " + msg);

			String message = (String) msg;
			getContext().actorOf(Props.create(Actor2.class));
			ActorSelection actor2 = context().actorSelection("akka://Notifier/user/Actor2");
			actor2.tell(message, self());
		}
	}
}
