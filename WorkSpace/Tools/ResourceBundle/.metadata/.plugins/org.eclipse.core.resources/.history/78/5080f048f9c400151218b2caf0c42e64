package example;

import example.model.Order;

import org.apache.log4j.Logger;
import org.milyn.Smooks;
import org.milyn.container.ExecutionContext;
import org.milyn.payload.JavaSource;
import org.xml.sax.SAXException;

import javax.xml.transform.stream.StreamResult;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.StringWriter;

public class Main {
	public static Logger logger = Logger.getLogger(Main.class);

	protected String runSmooksTransform(Object inputJavaObject) throws IOException, SAXException {
		Smooks smooks = new Smooks("smooks-config.xml");

		try {
			ExecutionContext executionContext = smooks.createExecutionContext();
			StringWriter writer = new StringWriter();
			FileOutputStream fout = new FileOutputStream("src/main/resources/output.xml");
			smooks.filterSource(executionContext, new JavaSource(inputJavaObject), new StreamResult(fout));

			return writer.toString();
		} finally {
			smooks.close();
		}
	}

	public static void main(String[] args) {
		Main smooksMain = new Main();
		Order javaInput = new Order();
		String transResult = null;

		logger.debug(javaInput);

		logger.info("This needs to be transformed to XML.");

		try {
			transResult = smooksMain.runSmooksTransform(javaInput);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SAXException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		logger.debug(transResult);

	}

}